<script type="text/javascript">
    function generate() {
        var filters = $$('#generator_form select', '#generator_form input');
        var elements = [];
        for(var i in filters){
            if(filters[i].value && filters[i].value.length && !filters[i].disabled) elements.push(filters[i]);
        }
        var validator  = new Validation('generator_form');
        if (validator.validate()) {
            setLocation('<?php echo $this->getGenerateActionUrl(); ?>params/'+encode_base64(Form.serializeElements(elements))+'/');
        }
    }
</script>